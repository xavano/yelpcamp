<%- include("../partials/header") %>

<div class="row justify-content-center">
    <div class="col-md-12 text center">
        <h1 style="text-align: center">Create a New Campground</h1>
	</div>
    <div class="col-xs-12 col-md-6 col-lg-4">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<label for="name">Name</label>
				<input class="form-control" type="text" name="name" placeholder="Enter your campground name">
			</div>
			<div class="form-group">
				<label for="price">Cost</label>
				<input class="form-control" type="number" name="price" placeholder="Set a price" min="0.01" step="0.01">
			</div>
			 <div class="form-group">
				 <label for="image">Image Url</label>
				<input class="form-control" type="text" name="image" placeholder="Upload an image">
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<input class="form-control" type="text" name="description" placeholder="Write something about this place">
			</div>
			<div class="form-group">
				<label for="location">Location</label>
				<input class="form-control" type="text" name="location" id="location" placeholder="Enter an address">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
        </div>
    </div>

<%- include("../partials/footer") %>