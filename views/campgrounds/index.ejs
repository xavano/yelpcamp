<%- include("../partials/header") %>

<% if(currentUser && currentUser.isAdmin) { %>
	<h1 class="text-center">Hello master, you have the admin access</h1>
<% } %>

	<div class="container">
     <header class="jumbotron">
         <div class="container text-center">
             <h1 class="text-center"> Welcome to YelpCamp!</h1>
             <p class="text-center">View our beautiful campgrounds from all over the world</p>
			 <p>
				<form action="/campgrounds" method="GET" class="form-inline d-flex justify-content-center" id="campground-search">
                <div class="form-group ">
                    <input type="text" name="search" placeholder="Search for campgrounds" class="form-control">
					<input type="submit" value="Search" class="btn btn-default">
                </div>
              </form>
			 </p>
		    <p class="text-center">
                <a class="btn btn-add-new btn-lg" href="/campgrounds/new">Add New Campground</a>
             </p>
         </div>
     </header>
		
		     <div class="row text-center" id="campground-grid">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                  <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
                  <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-more-info">More Info</a>
                  </div>
                </div>
            </div>
        <% }); %>
    </div>
	</div>
     


<%- include("../partials/footer") %>